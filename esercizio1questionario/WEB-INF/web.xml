<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
 "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
    <display-name>Servlet di registrazione password</display-name>
    <description>
        Servlet di registrazione password tramite redirezione interna
        con aggiunta di un attributo alla richiesta
    </description>
    <servlet>
        <servlet-name>ServletA</servlet-name>
        <servlet-class>redirectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletB</servlet-name>
        <servlet-class>responseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletA</servlet-name>
        <url-pattern>/RedirectServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletB</servlet-name>
        <url-pattern>/ResponseServlet</url-pattern>
    </servlet-mapping>
</web-app>